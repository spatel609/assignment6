<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Course Code</th>
        <th>Course Detail</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
          <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#unless courses}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
{{/unless}}